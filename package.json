{
  "name": "grade-report-generator",
  "version": "1.0.0",
  "main": "src/main.js",
  "author": "Connor Masini",
  "homepage": "https://github.com/YOUR_USERNAME/YOUR_REPO_NAME",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/YOUR_REPO_NAME.git"
  },
  "scripts": {
    "clean": "npx rimraf dist pydist build build-py",
    "build-python": "pyinstaller report-backend.spec --distpath pydist --workpath build-py --clean --noconfirm",
    "start": "electron .",
    "pack:win": "npm run clean && npm run build-python && electron-builder --win portable",
    "dist:win": "npm run clean && npm run build-python && electron-builder --win nsis",
    "build:all": "npm run clean && npm run build-python && electron-builder --win nsis --publish=never",
    "release": "npm run clean && npm run build-python && electron-builder --win nsis --publish=always"
  },
  "build": {
    "appId": "com.wihs.reportgenerator",
    "productName": "Grade Report Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "src/main.js",
      "src/preload.js",
      "src/renderer.js",
      "src/**",
      "assets/**",
      "!backend/**",
      "!.venv/**",
      "!build-py/**",
      "!pydist/**",
      "!*.spec",
      "!requirements.txt"
    ],
    "extraResources": [
      {
        "from": "pydist/report-backend.exe",
        "to": "backend/report-backend.exe"
      },
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "user.settings",
        "to": "user.settings"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/app-icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Connor Masini"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Grade Report Generator",
      "installerIcon": "assets/app-icon.ico",
      "uninstallerIcon": "assets/app-icon.ico",
      "installerHeaderIcon": "assets/app-icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Education"
    },
    "publish": {
      "provider": "github",
      "owner": "YOUR_USERNAME",
      "repo": "YOUR_REPO_NAME",
      "private": false
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  }
}